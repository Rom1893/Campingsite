<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-6">
            <div class="card mb-3">
                <img src="<%= Onecampground.image %>" class="card-img-top" alt="campground-image">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= Onecampground.title %>
                    </h5>
                    <p class="card-text">
                        <%= Onecampground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= Onecampground.location %>
                    </li>
                    <li class="list-group-item">
                        $<%= Onecampground.price %>/Night
                    </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-primary" href="/campgrounds/<%= Onecampground._id %>/edit">Edit
                        campground</a>
                    <form class="d-inline" action="/campgrounds/<%=Onecampground._id%>?_method=delete" method="post">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-6">
            <h2>Leave a Review</h2>
            <form action="/campgrounds/<%= Onecampground._id  %>/reviews" method="post" class="mb-3 validated-form"
                novalidate>
                <div class="mb-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% for (let review of Onecampground.reviews){ %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            Rating: <%= review.rating %>
                        </h5>
                        <p class="card-text">
                            Review: <%= review.body %>
                        </p>
                        <form action="/campgrounds/<%=Onecampground._id%>/reviews/<%=review._id%>?_method=delete"
                            method="post">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>

                <% } %>
        </div>
    </div>